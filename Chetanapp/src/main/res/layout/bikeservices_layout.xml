<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/addservice_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/adddetailsbtn"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addition_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addservicebtn"
            android:textColor="#424242"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view_above_recycler"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addservice_btn"
        android:background="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bikeservices_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_below_recycler"
        android:layout_below="@+id/view_above_recycler"
        android:scrollbars="none" />

    <View
        android:id="@+id/view_below_recycler"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/total_layout"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F7D358"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>